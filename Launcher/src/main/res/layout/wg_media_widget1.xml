<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/wg_music"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/wight_music_bg"
            android:layout_marginTop="20dp">
            <ImageView
                android:id="@+id/wg_music_prev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/mediainfo_prev1" />
            <ImageView
                android:id="@+id/wg_music_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/mediainfo_play1" />
            <ImageView
                android:id="@+id/wg_music_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/mediainfo_next1" />
        </LinearLayout>
        <TextView
            android:id="@+id/mediainfo_music_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="#FFF"
            android:textSize="22px"
            android:layout_marginTop="85px"
            android:layout_marginLeft="35px"
            />
        <ImageView
            android:id="@+id/mediainfo_id3img"
            android:layout_width="106px"
            android:layout_height="106px"
            android:layout_marginRight="15dp"
            android:scaleType="centerCrop"
            android:layout_alignParentRight="true"
            android:src="@drawable/mediainfo_music_default1" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="ltr"
            android:background="@drawable/wight_music_bg"
            android:id="@+id/wg_radio"
            android:layout_marginTop="20dp"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/wg_fm_prev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mediainfo_prev1"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_marginTop="60dp"/>

            <TextView
                android:id="@+id/wg_fm_tv02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="1"
                android:layout_weight="1"
                android:textColor="#FFF"
                android:layout_marginTop="51dp"
                android:textSize="40px" />

            <ImageView
                android:id="@+id/wg_fm_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mediainfo_next1"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="35dp"
                android:layout_marginTop="60dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="35dp"
            android:id="@+id/wg_radio_title"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/wg_fm_tv01"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left"
                android:maxLines="1"
                android:layout_marginTop="35dp"
                android:textColor="#FFF"
                android:textSize="24px" />
            <TextView
                android:id="@+id/wg_fm_tv03"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginTop="35dp"
                android:maxLines="1"
                android:textColor="#FFF"
                android:textSize="24px" />
            <ImageView
                android:id="@+id/mediainfo_fmimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:scaleType="centerCrop"
                android:src="@drawable/mediainfo_fm1" />
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>